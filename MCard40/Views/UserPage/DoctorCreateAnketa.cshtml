    }

    .main-form {
        margin-top: 30px;
        margin: 0 auto;
        max-width: 450px;
        padding: 10px 40px;
        background: #6DE66D;
        color: #F3F3F3;
        text-shadow: none;
        box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.31);
    }

    span.input-group-addon i {
