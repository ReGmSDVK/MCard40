@model MCard40.Model.Entity.CardPage
@using MCard40.Model.Enums
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CardPage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CardCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Disease" class="control-label"></label>
                <input asp-for="Disease" class="form-control" />
                <span asp-validation-for="Disease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseInfo" class="control-label"></label>
                <input asp-for="DiseaseInfo" class="form-control" />
                <span asp-validation-for="DiseaseInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment" class="control-label"></label>
                <input asp-for="Treatment" class="form-control" />
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assessment" class="control-label"></label>
                <select asp-for="Assessment" class="form-control" asp-items="Html.GetEnumSelectList<Assessment>()"></select>
                <span asp-validation-for="Assessment" class="text-danger"></span>
            </div>
            <div class="form-group" hidden ="hidden">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" value="@ViewBag.PatientId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
